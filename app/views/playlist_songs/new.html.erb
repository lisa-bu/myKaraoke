                <%= f.submit %>
              <% end %>
            </div>
          <% end  %>
        </div>
      </section>
      <%= link_to "Surprise Me!",
        surprise_playlist_playlist_songs_path(@playlist),
        data: { turbo_frame: "playlist_content" },
        class: "btn btn-warning"
      %>
    </div>
  </main>
</turbo-frame>
