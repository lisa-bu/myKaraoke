<div class="playlist-footer">
  <%= link_to :back, class: "btn btn-warning playlist-footer-btn" do %>
    <i class="fa-solid fa-angle-left"></i>
  <% end %>
  <%= link_to user_path(current_user, current_playlist_id: playlist.id),
            data: { turbo_method: :patch },
            class: "btn btn-warning playlist-footer-btn" do %>
    <i class="fa-solid fa-microphone"></i>
  <% end %>
  <%= link_to playlist_path(playlist),
            class: "btn btn-warning playlist-footer-btn",
            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
    <i class="fa-solid fa-trash"></i>
  <% end %>
</div>
