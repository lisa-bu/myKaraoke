<%= render "shared/search" %>
<div class="container">
  <div class="modal fade" id="newPlaylistModal" tabindex="-1" aria-labelledby="newPlaylistModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="newPlaylistModalLabel">Make a new playlist!</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= simple_form_for @playlist do |f| %>
            <%= f.input :name %>
            <%= f.submit 'Submit', class: 'btn btn-info' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#newBookmarkModal">Make a new playlist!</button>
</div>
<h1>Playlists</h1>
<% @playlists.each do |playlist| %>
  <div class="card">
    <%= link_to playlist.name, playlist_path(playlist) %>
    <% alert = playlist.id == current_user.current_playlist_id ? "Cannot delete currently playing playlist" : "Are you sure you want to delete this playlist?" %>
    <%= link_to playlist_path(playlist), data: { turbo_method: :delete, turbo_confirm: alert }, class: "delete-btn" do %>
      <i class="fa-solid fa-xmark"></i>
    <% end %>
  </div>
<% end %>
</div>
